.dotting {
    display: inline-block; min-width:4px; min-height:4px;
	border-radius:50%;
    box-shadow: 4px 0 currentColor, 12px 0 currentColor,20px 0 currentColor; /* for IE9+, ..., 3个点 */
    animation: dot 4s infinite step-start both; /* for IE10+, ... */
}
.dotting:before { content: '...'; } /* for IE8. 若无需兼容IE8, 此行以及下一行删除*/
.dotting::before { content: ''; } /* for IE9+ 覆盖 IE8 */
:root .dotting { margin-right: 8px; } /* for IE9+,FF,CH,OP,SF 占据空间*/

@keyframes dot {
    25% { box-shadow: none; }                                  /* 0个点 */
    50% { box-shadow: 4px 0 currentColor; }                    /* 1个点 */
    75% { box-shadow: 4px 0 currentColor, 12px 0 currentColor;  /* 2个点 */ }
}
				


@keyframes one-bar 
	0%
	33%
		opacity 0
	100%
	34%
		opacity 1
@keyframes two-bar 
	0%
	66%
		opacity 0
	100%
	67%
		opacity 1